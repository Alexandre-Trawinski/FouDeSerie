{% extends 'base.html.twig' %}

{% block title %}Fou de séries !
{% endblock %}

{% block body %}

	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container p-3 my-3">
		<div class="jumbotron">
			<center>
				<h1>Les séries</h1>
				<div class="card" style="width:400px">
					<div class="card-body">
						{% for laSerie in series %}
							<img class="card-img-top" src="{{laSerie.image}}"></li>
						<h5 class="card-title">{{laSerie.titre}}</h5>
						<p class="card-text">{{laSerie.resume}}</p>
						<p class="card-text">{{laSerie.duree|date('H:i:s')}}</p>
						<p class="card-text">{{laSerie.premiereDiffusion|date('d/m/Y')}}</p>
						<br>
						<br>
					{% endfor %}
				</div>
			</center>
		</div>
	</div>
</div>{% endblock %}
