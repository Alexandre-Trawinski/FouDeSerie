{% extends 'base.html.twig' %}

{% block title %}Fou de séries !
{% endblock %}

{% block body %}


	<div class="container p-3 my-3">
		<div class="jumbotron">
			<center>
				<h1>Les séries</h1>
				<div class="card" style="width:400px">
					<div class="card-body">
						{% for uneSerie in lesSeries %}
							<img class="card-img-top" src="{{uneSerie.image}}"></li>
						<h5 class="card-title">{{uneSerie.titre}}</h5>
						<p class="card-text">{{uneSerie.resume}}</p>
						<p class="card-text">{{uneSerie.duree|date('H:i:s')}}</p>
						<p class="card-text">{{uneSerie.premiereDiffusion|date('d/m/Y')}}</p>
						<br>
						<br>
						<form onsubmit="return(confirm('êtes vous sûr de vouloir supprimer cette série ?'))" action="{{path('deleteUneSerie', {'id':uneSerie.id})}}" method="POST">
							<input type="hidden" name="_method" value="DELETE">
							<input type="hidden" name="token" value="{{csrf_token('delete_serie'~ uneSerie.id)}}">
							<input type="submit" class="btn btn-primary" value="Supprimer">
						</form>
					{% endfor %}
				</div>
			</center>
		</div>
	</div>
</div>{% endblock %}
